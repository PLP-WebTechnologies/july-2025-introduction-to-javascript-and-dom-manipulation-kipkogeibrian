                 script.js
/**************************************
 * Part 1: JavaScript Basics
 * Variables, conditionals, and user input
 **************************************/

// Variable declarations
const ageInput = document.getElementById('userAge');
const checkAgeBtn = document.getElementById('checkAgeBtn');
const ageResult = document.getElementById('ageResult');

// Event listener for age check button
checkAgeBtn.addEventListener('click', () => {
    // Get user input and convert to number
    const age = parseInt(ageInput.value);
    
    // Conditional logic
    if (isNaN(age)) {
        ageResult.textContent = 'Please enter a valid number';
        ageResult.className = 'highlight';
    } else if (age < 0) {
        ageResult.textContent = 'Age cannot be negative!';
        ageResult.className = 'highlight';
    } else if (age < 18) {
        ageResult.textContent = 'You are a minor';
        ageResult.className = '';
    } else {
        ageResult.textContent = 'You are an adult';
        ageResult.className = '';
    }
});

/**************************************
 * Part 2: JavaScript Functions
 * Reusable blocks of code
 **************************************/

// Function to calculate circle area
function calculateCircleArea(radius) {
    return Math.PI * radius * radius;
}

// Function to format output
function formatArea(radius, area) {
    return `A circle with radius ${radius} has an area of ${area.toFixed(2)}`;
}

// DOM elements for function demo
const calculateBtn = document.getElementById('calculateBtn');
const functionResult = document.getElementById('functionResult');

// Event listener for calculate button
calculateBtn.addEventListener('click', () => {
    const radius = 5; // Could be dynamic with user input
    const area = calculateCircleArea(radius);
    functionResult.textContent = formatArea(radius, area);
});

/**************************************
 * Part 3: JavaScript Loops
 * Working with repetition
 **************************************/

// DOM elements for loop demo
const generateListBtn = document.getElementById('generateListBtn');
const numberList = document.getElementById('numberList');

// Event listener for generate list button
generateListBtn.addEventListener('click', () => {
    // Clear previous list
    numberList.innerHTML = '';
    
    // For loop to generate numbers
    for (let i = 1; i <= 10; i++) {
        const li = document.createElement('li');
        li.textContent = `Item ${i}`;
        numberList.appendChild(li);
    }
    
    // While loop example (commented out but available)
    /*
    let count = 1;
    while (count <= 10) {
        const li = document.createElement('li');
        li.textContent = `Item ${count}`;
        numberList.appendChild(li);
        count++;
    }
    */
});

/**************************************
 * Part 4: DOM Manipulation
 * Making the page interactive
 **************************************/

// DOM elements for manipulation
const changeColorBtn = document.getElementById('changeColorBtn');
const addItemBtn = document.getElementById('addItemBtn');
const toggleVisibilityBtn = document.getElementById('toggleVisibilityBtn');
const dynamicList = document.getElementById('dynamicList');
const domSection = document.getElementById('dom');

// Change header color
changeColorBtn.addEventListener('click', () => {
    const header = document.querySelector('header');
    const currentColor = header.style.backgroundColor;
    
    // Toggle between two colors
    if (currentColor === 'rgb(52, 152, 219)' || !currentColor) {
        header.style.backgroundColor = '#e74c3c';
    } else {
        header.style.backgroundColor = '#3498db';
    }
});

// Add item to list
addItemBtn.addEventListener('click', () => {
    const itemCount = dynamicList.children.length + 1;
    const newItem = document.createElement('li');
    newItem.textContent = `Dynamic Item ${itemCount}`;
    dynamicList.appendChild(newItem);
});

// Toggle section visibility
toggleVisibilityBtn.addEventListener('click', () => {
    domSection.classList.toggle('hidden');
});
